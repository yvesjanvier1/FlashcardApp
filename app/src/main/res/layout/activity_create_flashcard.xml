<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Question 1 -->
        <EditText
            android:id="@+id/edit_question1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="Question 1"
            android:textSize="18sp"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:background="@drawable/flashcard_question_bg"
            android:padding="16dp"
            android:textColor="@android:color/white"
            android:textColorHint="#B0FFFFFF" />

        <EditText
            android:id="@+id/edit_answer1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:hint="Answer 1"
            android:textSize="18sp"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:background="@drawable/flashcard_answer_bg"
            android:padding="16dp"
            android:textColor="#2196F3"
            android:textColorHint="#882196F3" />

        <!-- Question 2 -->
        <EditText
            android:id="@+id/edit_question2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="32dp"
            android:hint="Question 2"
            android:textSize="18sp"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:background="@drawable/flashcard_question_bg"
            android:padding="16dp"
            android:textColor="@android:color/white"
            android:textColorHint="#B0FFFFFF" />

        <EditText
            android:id="@+id/edit_answer2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:hint="Answer 2"
            android:textSize="18sp"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:background="@drawable/flashcard_answer_bg"
            android:padding="16dp"
            android:textColor="#2196F3"
            android:textColorHint="#882196F3" />

        <!-- Question 3 -->
        <EditText
            android:id="@+id/edit_question3"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="32dp"
            android:hint="Question 3"
            android:textSize="18sp"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:background="@drawable/flashcard_question_bg"
            android:padding="16dp"
            android:textColor="@android:color/white"
            android:textColorHint="#B0FFFFFF" />

        <EditText
            android:id="@+id/edit_answer3"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:hint="Answer 3"
            android:textSize="18sp"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:background="@drawable/flashcard_answer_bg"
            android:padding="16dp"
            android:textColor="#2196F3"
            android:textColorHint="#882196F3" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32dp"
            android:gravity="end">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/btn_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Done"
                android:layout_marginStart="16dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
